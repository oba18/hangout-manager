<div class=pad70>
  <div class="center">
<h2>Log in</h2>
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
        <div class="row justify-content-center">
          <div class="col-md-6">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, { class: 'form-control', required: true } %>
          </div>
        </div>
  </div>

  <br>
  <div class="field">
    <%= f.label :password, "パスワード" %><br />
        <div class="row justify-content-center">
          <div class="col-md-6">
    <%= f.password_field :password, { class: 'form-control', required: true } %>
          </div>
        </div>
  </div>

  <br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" ,{ class: 'btn btn-primary w-25' } %>
  </div>
<% end %>

<button type="button" class="btn btn-secondary w-25" onclick="location.href='http://localhost:3000'">戻る</button>
</div>
</div>
